<section class="flex my-4">
  <img
    class="self-start mr-4 rounded-full"
    src="https://placeimg.com/40/40/people"
  />
  <form
    id="comment-form"
    class="flex flex-col w-full app-comment-form md:flex-row"
  >
    <input
      class="app-parent-input"
      type="hidden"
      name="parent"
      value="{{parentId}}"
    />
    <input
      name="comment"
      type="text"
      class="app-comment-input form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out focus:text-gray-700 focus:bg-white focus:border-purple-600 focus:outline-none mb-4 md:mb-0"
      placeholder="What are your thoughts?"
    />
    <input
      type="submit"
      class="app-form-submit inline-block px-6 py-2.5 font-medium leading-tight text-white transition duration-150 ease-in-out bg-purple-600 rounded shadow-md sm:w-full md:w-fit font-text-xs hover:bg-purple-700 hover:shadow-lg focus:bg-purple-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-purple-800 active:shadow-lg md:ml-4"
      value="{{buttonText}}"
    />

  </form>
</section>